<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="DCPharmaCRMPU" transaction-type="RESOURCE_LOCAL">
		<class>ru.dreamcloud.alexion.model.Patient</class>
		<class>ru.dreamcloud.alexion.model.Event</class>
		<class>ru.dreamcloud.alexion.model.Diagnosis</class>
		<class>ru.dreamcloud.alexion.model.Resolution</class>
		<class>ru.dreamcloud.alexion.model.Region</class>
		<class>ru.dreamcloud.alexion.model.District</class>
		<properties>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pharma_crm"/>
			<property name="javax.persistence.jdbc.user" value="pharma"/>
			<property name="javax.persistence.jdbc.password" value="pharma"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>